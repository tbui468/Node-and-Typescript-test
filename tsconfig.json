{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    /* Basic Options */
    "incremental": true,                
    "target": "es5",                        
    "module": "commonjs",                    
    /* Strict Type-Checking Options */
    "strict": true,             
    /* Module Resolution Options */
    "esModuleInterop": true,                 
    /* Advanced Options */
    "skipLibCheck": true,                 
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "files": [
    "./src/App.ts",
    "./src/index.ts" 
  ]
}
